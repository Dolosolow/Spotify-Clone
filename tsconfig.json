{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@local/components/*": ["./src/components/*"],
      "@local/routes/*": ["./src/routes/*"],
      "@local/screens/*": ["./src/screens/*"],
      "@local/utils/*": ["./src/utils/*"],
      "@local/hooks/*": ["./src/hooks/*"],
      "@local/types/*": ["./src/types/*"],
      "@local/store/*": ["./src/store/*"],
      "@local/assets/*": ["./assets/*"]
    }
  }
}
